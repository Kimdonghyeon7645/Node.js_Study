<!doctype html>
<html lang="ko">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        #wrapper {
            padding: 50px 400px;
        }
    </style>
    <title>요고슨 list.html 입니다</title>
  </head>
  <body>

    <%- include('nav.html') %>

    <ul class="list-group">
      <% for(var i = 0; i < lists.length; i++){ %> 
      <li class="list-group-item">
        <h6><%= lists[i]._id %>번 - </h6>
        <h3><%= lists[i].할일 %></h3>
        <p>/ <%= lists[i].날짜 %></p>
        <button type="button" class="btn btn-danger delete" data-id="<%= lists[i]._id %>">삭제</button>
        <button type="button" class="btn btn-danger edit" data-id="<%= lists[i]._id %>">수정</button>
      </li>
      <% } %>
    </ul>



    <script src="//code.jquery.com/jquery-3.4.1.min.js"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <!-- <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
 
 
    <script>
      console.log(document.getElementsByClassName('delete')[0])
      $('.delete').on('click', function(event){
        console.log(event.target.dataset.id)
        $.ajax({
          method : 'DELETE',
          url : '/delete',
          data : { _id : event.target.dataset.id }
        }).done(function(result){
          location.reload()
          alert('삭제되었습니다.')
        }).fail(function(){

        })
      })

      $('.edit').on('click', function(event){
        console.log(event.target.dataset.id)
        location.href = '/edit/' + event.target.dataset.id
      })
    </script>
  </body>
</html>